@page
@model Bulky_Razor.Pages.Products.DeleteModel
<h1>Delete Book</h1>

<form method="post">
    <fieldset>
        <input asp-for="Product.Id" hidden class="form-control">

        <div class="form-group">
            <label asp-for="Product.Title" class="form-label mt-4"></label>
            <input asp-for="Product.Title" disabled class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Product.ISBN" class="form-label mt-4"></label>
            <input asp-for="Product.ISBN" disabled class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Product.Description" class="form-label mt-4"></label>
            <input asp-for="Product.Description" disabled class="form-control">
        </div>
        <div class="form-group">
            <label asp-for="Product.Author" class="form-label mt-4"></label>
            <input asp-for="Product.Author" disabled class="form-control">
        </div>
        <br />

        <button type="submit" class="btn btn-outline-danger">Delete</button>
        <a class="btn btn-primary" asp-page="/Products/Index">
            Back to List
        </a>


    </fieldset>
</form>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}