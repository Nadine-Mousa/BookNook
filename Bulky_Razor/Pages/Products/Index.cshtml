@page
@model Bulky_Razor.Pages.Products.IndexModel

<div class="container">
  
    <div class="row pt-4">
        
        <div class="col-6">
            <h2>BOOKS LIST</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-page="/Products/Create" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> CREATE NEW PRODUCT</a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Book Title</th>
                <th>ISBN</th>
                <th>Book Author</th>
                <th>Description</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach(var product in Model.ProductsList)
            {
            <tr>
                    <td>@product.Title</td>
                    <td>@product.ISBN</td>
                    <td>@product.Author</td>
                    <td>@product.Description</td>
                <td>
                     <a asp-page="/Products/Edit" asp-route-id="@product.Id" class="btn btn-outline-info"><i class="bi bi-pencil"></i> Edit</a>
                     <a asp-page="/Products/Delete" asp-route-id="@product.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i> Delete</a>
                </td>
            </tr>
            }
        </tbody>
    

    </table>

</div>