@model List<Product>

<div class="container">

    <div class="row pt-4">

        <div class="col-6">
            <h2>PRODUCT LIST</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> ADD NEW PRODUCT</a>
        </div>
    </div>


    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Rate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Price</td>
                    <td>@product.Stock</td>
                    <td>@product.Category.Name</td>
                    <td>@product.Rate</td>
                    <td>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" asp-route-id="@product.Id" class="btn btn-outline-info"><i class="bi bi-pencil"></i>   Edit</a>
                        <a asp-area="Admin" asp-controller="Product" asp-action="Delete" asp-route-id="@product.Id" class="btn btn-outline-danger"><i class="bi bi-trash"></i>  Delete</a>
                    </td>
                </tr>
            }
        </tbody>


    </table>

</div>