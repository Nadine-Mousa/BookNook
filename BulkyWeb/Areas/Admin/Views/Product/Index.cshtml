@model List<Product>

    @{
        ViewData["Title"] = "Products";
    }

<div class="container">

    <div class="row pt-4">

        <div class="col-6">
            <h2>PRODUCT LIST</h2>
        </div>
        <div class="col-6 text-end">
            <a asp-area="Admin" asp-controller="Product" asp-action="Upsert" class="btn btn-outline-primary"><i class="bi bi-plus-circle"></i> ADD NEW PRODUCT</a>
        </div>
    </div>


    <table id="myTable" class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Product Name</th>
                <th>Price</th>
                <th>Stock</th>
                <th>Category</th>
                <th>Rate</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            
        </tbody>


    </table>

</div>

@section Scripts{
    <script src="~/js/products.js"></script>
}