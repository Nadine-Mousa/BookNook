@model Category

<div class="container-s">
    <div class="row pt-5">
        <div class="col text-center">
            <h2>Edit Category</h2>
        </div>
        
    </div>
        <form asp-controller="Category" asp-action="Edit" method="post" enctype="multipart/form-data">
        <input asp-for="Id" hidden />
        <input asp-for="ImageUrl" hidden />
            <div class="row">

            <div class="col-10">
                <div asp-validation-summary="ModelOnly"></div>


                <div class="form-group">
                    <label asp-for="Name" class="form-label mt-4"></label>
                    <input asp-for="Name" class="form-control">
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DisplayOrder" class="form-label mt-4"></label>
                    <input asp-for="DisplayOrder" class="form-control">
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>

                </div>
                <div class="form-group">
                    <label asp-for="ImageUrl" class="form-label mt-4">Category Image</label>
                    <input class="form-control" type="file" name="file">
                </div>
                
                <br />

                <button type="submit" class="btn btn-outline-primary">Update</button>
                <a class="btn btn-primary" asp-controller="Category" asp-action="Index">Back to List</a>

            </div>
            <div class="col-2">
                <img src="@Model.ImageUrl" alt="@Model.Name" style="max-width: 200px; max-height: 100%;" />
            </div>

    </div>
        </form>
    
    
</div>

@section Scripts {
    @{
        <partial name="_ValidationScriptsPartial" />
    }
}